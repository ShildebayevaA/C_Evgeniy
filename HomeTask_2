	if (Number == 10)
	{
		int a, b, c, V, S_bok;
		float D;
		
		V = a*b*c;
		S_bok = 2 * (a*b + b*c + a*c);
		D = sqrt(pow(a, 2) + pow(b, 2) + pow(c, 2));
		cout << "Объем прямоугольного параллепипеда ="; V; "\n";
		cout << "Площадь боковой поверхности прямоугольного параллепипеда ="; S_bok; "\n";
		cout << "Диагональ прямоугольного параллепипеда ="; D; "\n";
